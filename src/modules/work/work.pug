mixin work(state)
  if state == 'work'
    +b.work
      +e.inner.inner
        +e.H2.title Почему 
          span нужно окрашивать
          br
          | на производстве?
        +e.slider
          .swiper-container
            .swiper-wrapper
              +e.slide.swiper-slide
                +e.box
                  +e.IMG.pic(src='/images/work-before.jpg' alt='')
                  +e.content
                    +e.P.caption Покраска на нашем производстве
                    +e.P.sign Качественная покраска
                +e.box
                  +e.IMG.pic(src='/images/work-after.jpg' alt='')
                  +e.content
                    +e.P.caption Самостоятельная покраска
                    +e.P.sign Некачественная покраска
              +e.slide.swiper-slide
                +e.box
                  +e.IMG.pic(src='/images/work-before.jpg' alt='')
                  +e.content
                    +e.P.caption Покраска на нашем производстве
                    +e.P.sign Качественная покраска
                +e.box
                  +e.IMG.pic(src='/images/work-after.jpg' alt='')
                  +e.content
                    +e.P.caption Самостоятельная покраска
                    +e.P.sign Некачественная покраска
              +e.slide.swiper-slide
                +e.box
                  +e.IMG.pic(src='/images/work-before.jpg' alt='')
                  +e.content
                    +e.P.caption Покраска на нашем производстве
                    +e.P.sign Качественная покраска
                +e.box
                  +e.IMG.pic(src='/images/work-after.jpg' alt='')
                  +e.content
                    +e.P.caption Самостоятельная покраска
                    +e.P.sign Некачественная покраска
            +b.swiper-pagination
          +b.swiper-btn_prev
            svg(fill='none' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 9 14')
